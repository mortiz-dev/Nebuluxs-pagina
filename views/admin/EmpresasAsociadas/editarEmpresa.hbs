<div class="container" style="margin:50px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h3>Modificar Empresa asociada</h3>
            <form method="post" action="/admin/empresasAsociadas/modificar" enctype="multipart/form-data">
                <input type="hidden" name="Id" value="{{empresa.Id}}">
                <div class="form-group">
                    <label for="NombreEmpresa">Nombre empresa</label>
                    <input type="text" class="form-control" id="NombreEmpresa" name="NombreEmpresa"
                        value="{{empresa.NombreEmpresa}}">
                </div>
                <div class="form-group">
                    <label for="DescripcionServicio">Descripci√≥n empresa</label>
                    <textarea class="form-control" id="DescripcionEmpresa" name="DescripcionEmpresa"
                        rows="3">{{empresa.DescripcionEmpresa}}</textarea>
                </div>
                <div class="form-group">
                    <label for="imagen">Link a imagen</label>
                    <input type="file" class="form-control" id="imagen" name="imagen">
                </div>
                <div>
                    <label>
                        <input type="checkbox" name="EliminarImagen" value="1"> Eliminar imagen
                    </label>
                    <input type="hidden" name="img_original" value="{{ servicios.img_id }}">
                </div>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
        </div>
    </div>
</div>
{{#if error}}
<h5> {{ message }}</h5>
{{/if}}